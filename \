int	render(t_mlx *mlx)
{
	int	x;
	int	y;
	char *floor;
	char *ceiling;

	y = 0;
	ft_printf("%s, %s", mlx->data->colors[0], mlx->data->colors[1]);
	ft_putnbrhex(mlx->data->colors);
	while(y <= HEIGHT)
	{
		x = 0;
		while (x <= WIDTH)
		{
			if (y <= HEIGHT / 2)
				mlx_pixel_put(mlx->mlx, mlx->win, x, y, #FF00FF00);
			else
				mlx_pixel_put(mlx->mlx, mlx->win, x, y, );
			x++;
		}
		y++;
	}
	return (1);
}
